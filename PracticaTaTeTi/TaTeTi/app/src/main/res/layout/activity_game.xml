<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:id="@+id/lblJugador"
            android:text="Jugador"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_width="261dp"
            android:layout_height="88dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"/>
    <Button
            android:id="@+id/btnCentro"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnArribaIzquierda"
            app:layout_constraintStart_toEndOf="@+id/btnCentroIzquierda"
            app:layout_constraintEnd_toStartOf="@+id/btnCentroDerecha"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnCentroArriba"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/lblJugador"
            app:layout_constraintStart_toEndOf="@+id/btnArribaIzquierda"
            app:layout_constraintEnd_toStartOf="@+id/btnArribaDerecha"
            android:layout_marginTop="76dp"/>
    <Button
            android:id="@+id/btnArribaDerecha"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/lblJugador"
            app:layout_constraintStart_toEndOf="@+id/btnCentroArriba"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp"/>
    <Button
            android:id="@+id/btnCentroIzquierda"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnArribaIzquierda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCentro"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnArribaIzquierda"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/lblJugador"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCentroArriba"
            android:layout_marginTop="76dp"/>
    <Button
            android:id="@+id/btnAbajoIzquierda"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCentroIzquierda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCentroAbajo"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnCentroAbajo"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCentro"
            app:layout_constraintStart_toEndOf="@+id/btnAbajoIzquierda"
            app:layout_constraintEnd_toStartOf="@+id/btnAbajoDerecha"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnAbajoDerecha"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCentroDerecha"
            app:layout_constraintStart_toEndOf="@+id/btnCentroAbajo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnCentroDerecha"
            android:text="-"
            android:layout_width="119dp"
            android:layout_height="87dp"
            app:layout_constraintTop_toBottomOf="@+id/btnArribaIzquierda"
            app:layout_constraintStart_toEndOf="@+id/btnCentro"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>
    <Button
            android:id="@+id/btnReiniciar"
            android:text="Reiniciar"
            android:layout_width="314dp"
            android:layout_height="49dp"
            tools:layout_editor_absoluteX="48dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCentroAbajo"
            android:layout_marginTop="36dp"/>
    <TextView
            android:id="@+id/lblGanador"
            android:text="Y el ganador es..."
            android:textSize="25dp"
            android:layout_width="213dp"
            android:layout_height="38dp"
            tools:layout_editor_absoluteX="99dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCentroAbajo"
            android:layout_marginTop="112dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>